{
	"name": "Python PikePDF",
	"image": "mcr.microsoft.com/devcontainers/python:3.13",
	"postCreateCommand": "pip install pikepdf",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"charliermarsh.ruff"
			],
			"settings": {
				"python.linting.enabled": true,
				"[python]": {
					"editor.formatOnSave": true,
					"editor.defaultFormatter": "charliermarsh.ruff"
				}
			}
		}
	}
}
